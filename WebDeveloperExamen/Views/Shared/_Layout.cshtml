<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Aplicación HTML5</title>
    @*@Scripts.Render("~/bundles/jquery")*@    
    <script src="~/Scripts/jquery-1.9.0.min.js"></script>
    @Scripts.Render("~/bundles/modernizr")  
    @Styles.Render("~/Content/css")
</head>
<body>
    <header>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Examen", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <nav class="navbar-collapse collapse">        
                    @if(Request.IsAuthenticated)
                    { 
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Producto", "Index", new { area = "DoFactory", controller = "Producto" })</li>
                            <li>@Html.ActionLink("Cliente", "Index", new { area = "DoFactory", controller = "Address" })</li>
                            
                        </ul>
                    }
                    @Html.Partial("_LoginPartial");
                </nav>
            </div>
        </div>

    </header>
    <section class="container body-content">
        @RenderBody()
    </section>
    @*<footer>
        &copy; @DateTime.Now.Year - Todos los derechos reservados al autor.
    </footer>*@
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
