@model IEnumerable<WebDeveloperExamen.Model.Product>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SupplierId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Package)
        </th>
       
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Package)
            </td>
           
            <td>
 
                <a href="#" onclick="getModalContent('@Url.Action("Editar",new { area="DoFactory", id=item.Id})'); return false;" data-toggle="modal" data-target="#modal-container" class="btn btn-success btn-sm">
                    <span class="glyphicon glyphicon-edit"></span> Edit
                </a>
                <a href="#" onclick="getModalContent('@Url.Action("Detalle",new { area="DoFactory", id=item.Id})'); return false;" data-toggle="modal" data-target="#modal-container" class="btn btn-success btn-sm">
                    <span class="glyphicon glyphicon-info-sign"></span> Detalle
                </a>
                <a href="#" onclick="getModalContent('@Url.Action("Eliminar",new { area="DoFactory", id=item.Id})'); return false;" data-toggle="modal" data-target="#modal-container" class="btn btn-danger btn-sm">
                    <span class="glyphicon glyphicon-remove"></span> Eliminar
                </a>


            </td>
        </tr>
    }

</table>
